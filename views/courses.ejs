<%- include('header') %>
<div class="text-center" style="padding: 100px 0 100px">
  <a id="btndis" href="/courses/create">Add New Course</a>
</div>

<div class="container mt-5" style="padding-top: 40px">
  <div class="row justify-content-center">
    <% courses.forEach(course => { %> <% if (courses.length === 1) { %>
    <div class="col-12 col-md-8 col-lg-12 mb-5">
      <% } else if (courses.length <= 2) { %>
      <div class="col-12 col-sm-6 col-md-6 col-lg-6 mb-5">
        <% } else { %>
        <div class="col-12 col-sm-6 col-md-4 col-lg-4 mb-5">
          <% } %>
          <div class="card" style="width: 100%; height: auto" ,>
            <img
              src="<%= course.image ? course.image : '/img/placeholder.png' %>"
              class="card-img-top"
              alt="<%= course.title %>"
              style="height: 200px; object-fit: cover"
            />

            <div class="card-body">
              <h5 class="card-title"><%= course.title %></h5>
              <p class="card-text"><%= course.description %></p>
              <p class="card-text">
                <strong>Author:</strong> <%= course.author %>
              </p>
              <p class="card-text">
                <strong>Price:</strong> $<%= course.price %>
              </p>
              <a
                href="/courses/edit/<%= course.id %>"
                id="Edit"
                class="btn btn-outline-primary"
                >Edit</a
              >
              <form
                action="/courses/delete/<%= course.id %>"
                method="POST"
                style="display: inline"
              >
                <button
                  type="submit"
                  onclick="return confirm('Are you sure you want to delete this course?')"
                  class="btn btn-warning btn-sm"
                  id="sub"
                >
                  Delete
                </button>
              </form>
            </div>
          </div>
        </div>
        <% }) %>
      </div>
    </div>

    <%- include('footer') %>
  </div>
</div>
